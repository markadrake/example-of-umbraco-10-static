{
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.html": "${capture}.scss, ${capture}.ts, ${capture}.js",
		"*.scss": "${capture}.css, ${capture}.min.css",
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
	},
	"search.exclude": {
		"**/node_modules": true
	},
	"files.exclude": {
		"**/node_modules": true,
		"**/.git": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/bin": true,
		"**/obj": true,
		"**/.vs": true
	}
}