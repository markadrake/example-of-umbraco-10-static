{
	"compilerOptions": {
		"module": "system",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}